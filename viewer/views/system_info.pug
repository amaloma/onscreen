doctype html
html

  head
    meta(charset="utf-8")
    title=title

    include head.pug

  body
    include menu.pug

    .container
      .row
        .span12
          h1.page-header
            | System Info

          table.table.table-bordered(style="width: 100")
            thead
              tr
                th Load Average
                th Free Space
                th Free Mem
                th Uptime
                th Monitor Info
            tbody
              tr
                td #{loadavg} %
                td #{free_space}
                td #{free_mem}MB of #{total_mem}MB 
                td #{uptime} days
                td #{display_info}
          section
            .header
              | Latest Viewer Logs

          if viewlog
            table.table.table-striped
              for line in viewlog
                tr
                  td #{line}
          else
            p There are no recent log messages.

    include foot.pug